---
/**
 * Achievement Detail Page
 * 
 * Dynamic page for individual achievements.
 * Uses shared Gallery component and centralized icons.
 */
import Layout from '../../layouts/Layout.astro';
import ImageGallery from '../../components/ImageGallery.svelte';
import ClickableImage from '../../components/ClickableImage.svelte';
import { getCollection } from 'astro:content';
import { getIcon } from '../../utils/icons';
import type { IconType } from '../../types';

export async function getStaticPaths() {
  const achievements = await getCollection('achievements', ({ data }) => !data.draft);
  return achievements.map((achievement) => ({
    params: { slug: achievement.slug },
    props: { achievement },
  }));
}

const { achievement } = Astro.props;
const { Content } = await achievement.render();

// Computed values
const isWinner = achievement.data.type === 'winner';
const hasImage = !!achievement.data.image;
const hasGallery = achievement.data.gallery && achievement.data.gallery.length > 0;
const iconName: IconType = (achievement.data.icon as IconType) || 'trophy';

// Collect all images for lightbox navigation
const allImages = [
  ...(hasImage ? [achievement.data.image] : []),
  ...(achievement.data.gallery || []).filter((item: string) => {
    const ext = item.split('.').pop()?.toLowerCase() || '';
    return !['mp4', 'webm', 'ogg'].includes(ext);
  })
];

// Icons
const mainIcon = getIcon(iconName, { size: 32, strokeWidth: 1.5 });
const externalIcon = getIcon('external', { size: 16 });
const gamepadIcon = getIcon('gamepad', { size: 16 });
---

<Layout 
  title={`${achievement.data.title} — Bartłomiej Gordon`} 
  description={achievement.data.description}
  image={achievement.data.image}
>
  <article class="achievement-detail">
    <div class="container">
      <a href="/#achievements" class="back-link">← Back to Achievements</a>
      
      <header class="achievement-header">
        <div class="header-content">
          <div class="icon-wrapper" class:list={{ winner: isWinner }}>
            <Fragment set:html={mainIcon} />
          </div>
          
          <div class="header-info">
            <div class="meta">
              <span class="tag" class:list={{ 'tag--highlight': isWinner }}>
                {isWinner ? 'Winner' : achievement.data.type}
              </span>
              <span class="date">{achievement.data.date}</span>
              {achievement.data.participants && (
                <span class="participants">{achievement.data.participants} participants</span>
              )}
            </div>
            
            <h1>{achievement.data.title}</h1>
            <p class="event">{achievement.data.event}</p>
            <p class="description">{achievement.data.description}</p>
            
            {achievement.data.rank && (
              <div class="rank-badge">
                <span class="rank-value">{achievement.data.rank}</span>
              </div>
            )}
            
            <div class="actions">
              {achievement.data.url && (
                <a 
                  href={achievement.data.url} 
                  class="btn btn--primary" 
                  target="_blank" 
                  rel="noopener noreferrer"
                >
                  <Fragment set:html={externalIcon} />
                  Open Link
                </a>
              )}
              {achievement.data.game && (
                <a href={`/games/${achievement.data.game}`} class="btn">
                  <Fragment set:html={gamepadIcon} />
                  View Game
                </a>
              )}
            </div>
          </div>
        </div>
        
        {hasImage && (
          <div class="featured-image">
            <ClickableImage 
              src={achievement.data.image} 
              alt={achievement.data.title}
              allImages={allImages}
              client:load
            />
          </div>
        )}
      </header>
      
      {hasGallery && (
        <ImageGallery 
          items={achievement.data.gallery} 
          title={achievement.data.title}
          columns={3}
          client:load
        />
      )}
      
      <div class="achievement-content prose">
        <Content />
      </div>
    </div>
  </article>
</Layout>

<style>
  .achievement-detail {
    padding: 7rem 0 4rem;
    min-height: 100vh;
  }
  
  .container {
    max-width: var(--container-max-width-article);
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }
  
  .back-link {
    display: inline-flex;
    align-items: center;
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    color: var(--color-accent);
    text-decoration: none;
    margin-bottom: var(--space-9);
    transition: color var(--duration-fast) var(--ease-out);
  }
  
  .back-link:hover {
    color: var(--color-accent-dim);
  }
  
  .achievement-header {
    margin-bottom: var(--space-11);
    padding-bottom: var(--space-10);
    border-bottom: 1px solid var(--color-border-subtle);
  }
  
  .header-content {
    display: flex;
    gap: var(--space-9);
    margin-bottom: var(--space-9);
  }
  
  .icon-wrapper {
    flex-shrink: 0;
    width: 72px;
    height: 72px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-elevated);
    border-radius: var(--radius-lg);
    color: var(--color-text-muted);
  }
  
  .icon-wrapper.winner {
    background: var(--color-accent-glow);
    color: var(--color-accent);
  }
  
  .header-info {
    flex: 1;
  }
  
  .meta {
    display: flex;
    align-items: center;
    gap: var(--space-5);
    margin-bottom: var(--space-5);
    flex-wrap: wrap;
  }
  
  .tag {
    padding: var(--space-1) var(--space-4);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    background: var(--color-bg-elevated);
    border-radius: var(--radius-sm);
    color: var(--color-text-secondary);
  }
  
  .tag--highlight {
    background: var(--color-accent-glow);
    color: var(--color-accent);
  }
  
  .date {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }
  
  .participants {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    padding-left: var(--space-5);
    border-left: 1px solid var(--color-border-light);
  }
  
  h1 {
    font-family: var(--font-display);
    font-size: 2.25rem;
    margin-bottom: var(--space-3);
    color: var(--color-text-primary);
  }
  
  .event {
    font-size: 1.1rem;
    color: var(--color-accent);
    font-weight: var(--font-weight-medium);
    margin-bottom: var(--space-5);
  }
  
  .description {
    font-size: var(--font-size-md);
    color: var(--color-text-secondary);
    line-height: 1.65;
    margin-bottom: var(--space-7);
  }
  
  .rank-badge {
    display: inline-flex;
    padding: var(--space-4) var(--space-6);
    background: var(--color-bg-card);
    border: 1px solid var(--color-border-light);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-8);
  }
  
  .rank-value {
    font-family: var(--font-display);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-accent);
  }
  
  .actions {
    display: flex;
    gap: var(--space-5);
    flex-wrap: wrap;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-4) var(--space-7);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    border: 1px solid var(--color-border-light);
    border-radius: var(--radius-md);
    background: var(--color-bg-card);
    color: var(--color-text-primary);
    text-decoration: none;
    transition: all var(--duration-fast) var(--ease-out);
  }
  
  .btn:hover {
    background: var(--color-bg-elevated);
    border-color: var(--color-accent);
  }
  
  .btn--primary {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: var(--color-bg-primary);
  }
  
  .btn--primary:hover {
    background: var(--color-accent-dim);
    border-color: var(--color-accent-dim);
  }
  
  .featured-image {
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: var(--color-bg-card);
  }
  
  .featured-image :global(.clickable-image) {
    width: 100%;
  }
  
  .featured-image :global(.clickable-image img) {
    width: 100%;
    height: auto;
    object-fit: contain;
  }
  
  /* Prose styles for markdown content */
  .prose {
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
  }
  
  .prose :global(h2) {
    font-family: var(--font-display);
    font-size: 1.375rem;
    color: var(--color-text-primary);
    margin: var(--space-9) 0 var(--space-5);
    padding-bottom: var(--space-3);
    border-bottom: 1px solid var(--color-border-subtle);
  }
  
  .prose :global(h3) {
    font-family: var(--font-display);
    font-size: 1.125rem;
    color: var(--color-text-primary);
    margin: var(--space-8) 0 var(--space-4);
  }
  
  .prose :global(p) {
    margin-bottom: var(--space-6);
  }
  
  .prose :global(ul) {
    list-style: none;
    padding-left: var(--space-7);
    margin-bottom: var(--space-7);
  }
  
  .prose :global(li) {
    position: relative;
    margin-bottom: var(--space-2);
  }
  
  .prose :global(li::before) {
    content: '–';
    position: absolute;
    left: calc(var(--space-7) * -1);
    color: var(--color-text-muted);
  }
  
  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      gap: var(--space-8);
    }
    
    .icon-wrapper {
      width: 56px;
      height: 56px;
    }
    
    h1 {
      font-size: 1.75rem;
    }
    
    .actions {
      flex-direction: column;
    }
  }
</style>
