---
import Layout from '../layouts/Layout.astro';
---

<Layout title="CV | Game Developer Portfolio">
  <section class="cv-page">
    <div class="container">
      <header class="cv-header">
        <div class="cv-title-section">
          <h1>Your Name</h1>
          <p class="subtitle">Game Developer & Designer</p>
        </div>
        
        <div class="cv-contact">
          <a href="mailto:your@email.com" class="contact-item">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            your@email.com
          </a>
          <a href="https://github.com/yourusername" target="_blank" rel="noopener" class="contact-item">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
            </svg>
            github.com/yourusername
          </a>
          <a href="https://yourusername.itch.io" target="_blank" rel="noopener" class="contact-item">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="6" width="20" height="12" rx="2"></rect>
              <circle cx="8" cy="12" r="2"></circle>
              <path d="M15 10v4M13 12h4"></path>
            </svg>
            yourusername.itch.io
          </a>
          <span class="contact-item">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            Your City, Country
          </span>
        </div>
        
        <button class="print-btn" onclick="window.print()">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="6 9 6 2 18 2 18 9"></polyline>
            <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
            <rect x="6" y="14" width="12" height="8"></rect>
          </svg>
          Print / Save PDF
        </button>
      </header>
      
      <div class="cv-content">
        <!-- Summary -->
        <section class="cv-section">
          <h2 class="section-title">
            <span class="title-icon">01</span>
            Summary
          </h2>
          <p class="summary-text">
            Passionate game developer with 3+ years of experience creating engaging gaming experiences. 
            Skilled in Unity and Godot, with a proven track record in game jams including multiple wins 
            and top placements. Specializing in 2D games, procedural generation, and pixel art aesthetics. 
            Committed to creating games that are both fun to play and technically well-crafted.
          </p>
        </section>
        
        <!-- Skills -->
        <section class="cv-section">
          <h2 class="section-title">
            <span class="title-icon">02</span>
            Skills
          </h2>
          <div class="skills-categories">
            <div class="skill-category">
              <h3>Game Engines</h3>
              <div class="skill-tags">
                <span class="skill-tag primary">Unity</span>
                <span class="skill-tag primary">Godot</span>
                <span class="skill-tag">Unreal Engine</span>
              </div>
            </div>
            <div class="skill-category">
              <h3>Programming</h3>
              <div class="skill-tags">
                <span class="skill-tag primary">C#</span>
                <span class="skill-tag primary">GDScript</span>
                <span class="skill-tag">Python</span>
                <span class="skill-tag">JavaScript</span>
              </div>
            </div>
            <div class="skill-category">
              <h3>Game Design</h3>
              <div class="skill-tags">
                <span class="skill-tag">Level Design</span>
                <span class="skill-tag">Procedural Generation</span>
                <span class="skill-tag">Game Balance</span>
                <span class="skill-tag">UX Design</span>
              </div>
            </div>
            <div class="skill-category">
              <h3>Art & Audio</h3>
              <div class="skill-tags">
                <span class="skill-tag">Pixel Art</span>
                <span class="skill-tag">Aseprite</span>
                <span class="skill-tag">Basic Sound Design</span>
              </div>
            </div>
          </div>
        </section>
        
        <!-- Experience -->
        <section class="cv-section">
          <h2 class="section-title">
            <span class="title-icon">03</span>
            Experience
          </h2>
          <div class="timeline">
            <article class="timeline-item">
              <div class="timeline-marker"></div>
              <div class="timeline-content">
                <div class="timeline-header">
                  <h3>Indie Game Developer</h3>
                  <span class="timeline-date">2021 - Present</span>
                </div>
                <p class="timeline-company">Self-Employed / Freelance</p>
                <ul class="timeline-details">
                  <li>Developed and published 10+ games on itch.io and Steam</li>
                  <li>Participated in 20+ game jams with multiple top 10 finishes</li>
                  <li>Built a following of 5,000+ players across platforms</li>
                  <li>Collaborated with artists and musicians on various projects</li>
                </ul>
              </div>
            </article>
            
            <article class="timeline-item">
              <div class="timeline-marker"></div>
              <div class="timeline-content">
                <div class="timeline-header">
                  <h3>Junior Game Developer</h3>
                  <span class="timeline-date">2020 - 2021</span>
                </div>
                <p class="timeline-company">Example Games Studio</p>
                <ul class="timeline-details">
                  <li>Developed gameplay systems for mobile games using Unity</li>
                  <li>Optimized game performance for low-end devices</li>
                  <li>Implemented UI systems and player progression mechanics</li>
                </ul>
              </div>
            </article>
          </div>
        </section>
        
        <!-- Notable Projects -->
        <section class="cv-section">
          <h2 class="section-title">
            <span class="title-icon">04</span>
            Notable Projects
          </h2>
          <div class="projects-grid">
            <article class="project-card">
              <h3>Pixel Dungeon Escape</h3>
              <p class="project-meta">Unity ‚Ä¢ 2024 ‚Ä¢ GMTK Jam Winner</p>
              <p>Roguelike dungeon crawler with procedurally generated levels. Won 1st place in Best Gameplay category out of 5000+ submissions.</p>
            </article>
            <article class="project-card">
              <h3>Space Survivor</h3>
              <p class="project-meta">Godot ‚Ä¢ 2024</p>
              <p>Bullet-hell survival game with upgrade systems. Featured on itch.io front page with 10,000+ plays.</p>
            </article>
            <article class="project-card">
              <h3>Tiny Farm Simulator</h3>
              <p class="project-meta">Unity ‚Ä¢ 2024 ‚Ä¢ Cozy Jam Entry</p>
              <p>Relaxing farming simulation game. Received honorable mention for pixel art visuals.</p>
            </article>
          </div>
        </section>
        
        <!-- Awards -->
        <section class="cv-section">
          <h2 class="section-title">
            <span class="title-icon">05</span>
            Awards & Recognition
          </h2>
          <div class="awards-list">
            <div class="award-item">
              <span class="award-icon">üèÜ</span>
              <div class="award-content">
                <h3>1st Place - Best Gameplay</h3>
                <p>GMTK Game Jam 2024</p>
              </div>
            </div>
            <div class="award-item">
              <span class="award-icon">ü•à</span>
              <div class="award-content">
                <h3>Top 10 Overall</h3>
                <p>Ludum Dare 55</p>
              </div>
            </div>
            <div class="award-item">
              <span class="award-icon">‚≠ê</span>
              <div class="award-content">
                <h3>Honorable Mention - Art</h3>
                <p>Cozy Jam 2024</p>
              </div>
            </div>
          </div>
        </section>
        
        <!-- Education -->
        <section class="cv-section">
          <h2 class="section-title">
            <span class="title-icon">06</span>
            Education
          </h2>
          <div class="education-item">
            <div class="education-header">
              <h3>Bachelor's in Computer Science</h3>
              <span class="education-date">2017 - 2021</span>
            </div>
            <p class="education-school">Your University Name</p>
            <p class="education-details">Specialized in Game Development and Computer Graphics</p>
          </div>
        </section>
      </div>
      
      <footer class="cv-footer">
        <a href="/" class="back-link">‚Üê Back to Portfolio</a>
        <p class="last-updated">Last updated: January 2025</p>
      </footer>
    </div>
  </section>
</Layout>

<style>
  .cv-page {
    padding: 8rem 0 4rem;
    min-height: 100vh;
  }
  
  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  /* Header */
  .cv-header {
    text-align: center;
    margin-bottom: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
  }
  
  .cv-title-section h1 {
    font-size: 3rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
  }
  
  .subtitle {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }
  
  .cv-contact {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }
  
  .contact-item {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }
  
  a.contact-item:hover {
    color: var(--accent-primary);
  }
  
  .print-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: transparent;
    border: 2px solid var(--accent-primary);
    border-radius: 8px;
    color: var(--accent-primary);
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .print-btn:hover {
    background: var(--accent-primary);
    color: var(--bg-primary);
  }
  
  /* Sections */
  .cv-section {
    margin-bottom: 3rem;
  }
  
  .section-title {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid rgba(0, 255, 136, 0.3);
  }
  
  .title-icon {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9rem;
    color: var(--accent-primary);
    opacity: 0.7;
  }
  
  /* Summary */
  .summary-text {
    font-size: 1.05rem;
    line-height: 1.8;
    color: var(--text-secondary);
  }
  
  /* Skills */
  .skills-categories {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }
  
  .skill-category h3 {
    font-size: 0.9rem;
    font-family: 'JetBrains Mono', monospace;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
    margin-bottom: 0.75rem;
  }
  
  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .skill-tag {
    padding: 0.3rem 0.75rem;
    font-size: 0.8rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    color: var(--text-secondary);
  }
  
  .skill-tag.primary {
    background: rgba(0, 255, 136, 0.1);
    border-color: rgba(0, 255, 136, 0.3);
    color: var(--accent-primary);
  }
  
  /* Timeline */
  .timeline {
    position: relative;
    padding-left: 2rem;
  }
  
  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, var(--accent-primary), var(--accent-secondary));
    opacity: 0.3;
  }
  
  .timeline-item {
    position: relative;
    margin-bottom: 2rem;
  }
  
  .timeline-marker {
    position: absolute;
    left: -2rem;
    top: 0.25rem;
    width: 12px;
    height: 12px;
    background: var(--accent-primary);
    border-radius: 50%;
    transform: translateX(-5px);
  }
  
  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 0.25rem;
  }
  
  .timeline-header h3 {
    font-size: 1.1rem;
  }
  
  .timeline-date {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
    color: var(--accent-primary);
  }
  
  .timeline-company {
    color: var(--text-secondary);
    margin-bottom: 0.75rem;
  }
  
  .timeline-details {
    list-style: none;
    padding: 0;
  }
  
  .timeline-details li {
    position: relative;
    padding-left: 1.5rem;
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.7;
  }
  
  .timeline-details li::before {
    content: '‚ñ∏';
    position: absolute;
    left: 0;
    color: var(--accent-tertiary);
  }
  
  /* Projects */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }
  
  .project-card {
    padding: 1.5rem;
    background: var(--bg-card);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    transition: all 0.3s ease;
  }
  
  .project-card:hover {
    border-color: rgba(0, 255, 136, 0.3);
    transform: translateY(-4px);
  }
  
  .project-card h3 {
    font-size: 1rem;
    margin-bottom: 0.25rem;
  }
  
  .project-meta {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--accent-primary);
    margin-bottom: 0.75rem;
  }
  
  .project-card p:last-child {
    color: var(--text-secondary);
    font-size: 0.9rem;
    line-height: 1.6;
  }
  
  /* Awards */
  .awards-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .award-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    background: var(--bg-card);
    border-radius: 8px;
    border-left: 3px solid var(--accent-yellow);
  }
  
  .award-icon {
    font-size: 1.5rem;
  }
  
  .award-content h3 {
    font-size: 1rem;
    margin-bottom: 0.25rem;
  }
  
  .award-content p {
    font-size: 0.85rem;
    color: var(--text-secondary);
  }
  
  /* Education */
  .education-item {
    padding: 1.5rem;
    background: var(--bg-card);
    border-radius: 12px;
  }
  
  .education-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 0.25rem;
  }
  
  .education-header h3 {
    font-size: 1.1rem;
  }
  
  .education-date {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
    color: var(--accent-primary);
  }
  
  .education-school {
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }
  
  .education-details {
    font-size: 0.9rem;
    color: var(--text-muted);
  }
  
  /* Footer */
  .cv-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .back-link {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9rem;
    color: var(--accent-primary);
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .back-link:hover {
    transform: translateX(-4px);
  }
  
  .last-updated {
    font-size: 0.85rem;
    color: var(--text-muted);
  }
  
  /* Print styles */
  @media print {
    .cv-page {
      padding: 0;
      background: white;
    }
    
    .print-btn, .back-link {
      display: none;
    }
    
    * {
      color: black !important;
      background: white !important;
      border-color: #ddd !important;
    }
    
    .cv-title-section h1 {
      -webkit-text-fill-color: black;
    }
  }
  
  @media (max-width: 768px) {
    .cv-contact {
      flex-direction: column;
      align-items: center;
    }
    
    .skills-categories {
      grid-template-columns: 1fr;
    }
    
    .timeline-header {
      flex-direction: column;
      gap: 0.25rem;
    }
    
    .cv-footer {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>
