---
import Layout from '../layouts/Layout.astro';
---

<Layout title="CV — Bartłomiej Gordon">
  <section class="cv-page">
    <div class="container">
      <header class="cv-header">
        <div class="cv-title-section">
          <h1>Bartłomiej Gordon</h1>
          <p class="subtitle">Game Developer & Designer</p>
        </div>
        
        <div class="cv-contact">
          <a href="mailto:your@email.com" class="contact-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            your@email.com
          </a>
          <a href="https://github.com/yourusername" target="_blank" rel="noopener" class="contact-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
            </svg>
            GitHub
          </a>
          <a href="https://yourusername.itch.io" target="_blank" rel="noopener" class="contact-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="6" width="20" height="12" rx="2"></rect>
              <circle cx="8" cy="12" r="2"></circle>
              <path d="M15 10v4M13 12h4"></path>
            </svg>
            itch.io
          </a>
        </div>
        
        <button class="print-btn" onclick="window.print()">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="6 9 6 2 18 2 18 9"></polyline>
            <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
            <rect x="6" y="14" width="12" height="8"></rect>
          </svg>
          Print / PDF
        </button>
      </header>
      
      <div class="cv-content">
        <section class="cv-section">
          <h2>Summary</h2>
          <p class="summary-text">
            Game developer with 3+ years of experience creating engaging gaming experiences. 
            Proficient in Unity and Godot with a track record of successful game jam 
            participation including multiple wins.
          </p>
        </section>
        
        <section class="cv-section">
          <h2>Skills</h2>
          <div class="skills-grid">
            <div class="skill-group">
              <h3>Engines</h3>
              <div class="skill-tags">
                <span class="tag highlight">Unity</span>
                <span class="tag highlight">Godot</span>
                <span class="tag">Unreal</span>
              </div>
            </div>
            <div class="skill-group">
              <h3>Languages</h3>
              <div class="skill-tags">
                <span class="tag highlight">C#</span>
                <span class="tag highlight">GDScript</span>
                <span class="tag">Python</span>
              </div>
            </div>
            <div class="skill-group">
              <h3>Design</h3>
              <div class="skill-tags">
                <span class="tag">Level Design</span>
                <span class="tag">Procedural Gen</span>
                <span class="tag">UX</span>
              </div>
            </div>
            <div class="skill-group">
              <h3>Art</h3>
              <div class="skill-tags">
                <span class="tag">Pixel Art</span>
                <span class="tag">Aseprite</span>
              </div>
            </div>
          </div>
        </section>
        
        <section class="cv-section">
          <h2>Experience</h2>
          <div class="experience-list">
            <article class="exp-item">
              <div class="exp-header">
                <h3>Indie Game Developer</h3>
                <span class="exp-date">2021 — Present</span>
              </div>
              <p class="exp-company">Freelance</p>
              <ul>
                <li>Published 10+ games on itch.io and Steam</li>
                <li>20+ game jams with multiple top 10 finishes</li>
                <li>Built a following of 5,000+ players</li>
              </ul>
            </article>
          </div>
        </section>
        
        <section class="cv-section">
          <h2>Awards</h2>
          <div class="awards-list">
            <div class="award-item">
              <h3>1st Place — Best Gameplay</h3>
              <p>GMTK Game Jam 2024</p>
            </div>
            <div class="award-item">
              <h3>Top 10 Overall</h3>
              <p>Ludum Dare 55</p>
            </div>
            <div class="award-item">
              <h3>Honorable Mention — Art</h3>
              <p>Cozy Jam 2024</p>
            </div>
          </div>
        </section>
      </div>
      
      <footer class="cv-footer">
        <a href="/" class="back-link">← Back to Portfolio</a>
        <p class="last-updated">Last updated January 2025</p>
      </footer>
    </div>
  </section>
</Layout>

<style>
  .cv-page {
    padding: 7rem 0 3rem;
    min-height: 100vh;
  }
  
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .cv-header {
    text-align: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-subtle);
  }
  
  .cv-title-section h1 {
    font-family: var(--font-display);
    font-size: 2.5rem;
    color: var(--text-primary);
    margin-bottom: 0.375rem;
  }
  
  .subtitle {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }
  
  .cv-contact {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.25rem;
    margin-bottom: 1.5rem;
  }
  
  .contact-item {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.85rem;
    color: var(--text-secondary);
    text-decoration: none;
  }
  
  .contact-item:hover { color: var(--accent); }
  
  .print-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    font-size: 0.8rem;
    font-weight: 500;
    border: 1px solid var(--border-light);
    border-radius: var(--radius);
    background: transparent;
    color: var(--text-secondary);
    cursor: pointer;
  }
  
  .print-btn:hover {
    background: var(--bg-elevated);
    color: var(--text-primary);
  }
  
  .cv-content {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }
  
  .cv-section {
    padding-bottom: 2.5rem;
    border-bottom: 1px solid var(--border-subtle);
  }
  
  .cv-section:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }
  
  .cv-section h2 {
    font-family: var(--font-display);
    font-size: 1.25rem;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }
  
  .summary-text {
    color: var(--text-secondary);
    line-height: 1.7;
  }
  
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }
  
  .skill-group h3 {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
  }
  
  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }
  
  .tag {
    padding: 0.25rem 0.625rem;
    font-size: 0.75rem;
    font-weight: 500;
    background: var(--bg-elevated);
    border-radius: 4px;
    color: var(--text-secondary);
  }
  
  .tag.highlight {
    background: var(--accent-glow);
    color: var(--accent);
  }
  
  .exp-item {
    margin-bottom: 1.5rem;
  }
  
  .exp-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 0.25rem;
  }
  
  .exp-header h3 {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 600;
  }
  
  .exp-date {
    font-size: 0.8rem;
    color: var(--accent);
  }
  
  .exp-company {
    color: var(--text-secondary);
    margin-bottom: 0.75rem;
  }
  
  .exp-item ul {
    list-style: none;
    padding: 0;
  }
  
  .exp-item li {
    position: relative;
    padding-left: 1.25rem;
    color: var(--text-secondary);
    font-size: 0.9rem;
    line-height: 1.6;
  }
  
  .exp-item li::before {
    content: '–';
    position: absolute;
    left: 0;
    color: var(--text-muted);
  }
  
  .awards-list {
    display: grid;
    gap: 0.75rem;
  }
  
  .award-item {
    padding: 1rem;
    background: var(--bg-card);
    border-radius: var(--radius);
    border-left: 2px solid var(--accent);
  }
  
  .award-item h3 {
    font-family: var(--font-display);
    font-size: 0.95rem;
    margin-bottom: 0.125rem;
  }
  
  .award-item p {
    font-size: 0.8rem;
    color: var(--text-secondary);
  }
  
  .cv-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border-subtle);
  }
  
  .back-link {
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--accent);
    text-decoration: none;
  }
  
  .back-link:hover { color: var(--accent-dim); }
  
  .last-updated {
    font-size: 0.8rem;
    color: var(--text-muted);
  }
  
  @media print {
    .cv-page { padding: 0; background: white; }
    .print-btn, .back-link { display: none; }
    * { color: black !important; background: white !important; }
  }
  
  @media (max-width: 768px) {
    .skills-grid { grid-template-columns: 1fr; }
    .exp-header { flex-direction: column; gap: 0.25rem; }
    .cv-footer { flex-direction: column; gap: 0.75rem; text-align: center; }
  }
</style>
