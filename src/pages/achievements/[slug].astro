---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const achievements = await getCollection('achievements');
  return achievements.map((achievement) => ({
    params: { slug: achievement.slug },
    props: { achievement },
  }));
}

const { achievement } = Astro.props;
const { Content } = await achievement.render();

const iconMap = {
  trophy: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"></path>
    <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"></path>
    <path d="M4 22h16"></path>
    <path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"></path>
    <path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"></path>
    <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"></path>
  </svg>`,
  medal: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <circle cx="12" cy="17" r="5"></circle>
    <path d="M12 12V2"></path>
    <path d="M8 2h8"></path>
  </svg>`,
  star: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
  </svg>`,
  award: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <circle cx="12" cy="8" r="6"></circle>
    <path d="M15.477 12.89 17 22l-5-3-5 3 1.523-9.11"></path>
  </svg>`,
  book: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
    <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
    <line x1="8" y1="6" x2="16" y2="6"></line>
    <line x1="8" y1="10" x2="14" y2="10"></line>
  </svg>`,
  users: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
    <circle cx="9" cy="7" r="4"></circle>
    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
  </svg>`
};

const isWinner = achievement.data.type === 'winner';
---

<Layout title={`${achievement.data.title} — Bartłomiej Gordon`} description={achievement.data.description}>
  <article class="achievement-detail">
    <div class="container">
      <a href="/#achievements" class="back-link">← Back to Achievements</a>
      
      <header class="achievement-header">
        <div class="header-content">
          <div class="icon-wrapper" class:winner={isWinner}>
            <Fragment set:html={iconMap[achievement.data.icon] || iconMap.trophy} />
          </div>
          
          <div class="header-info">
            <div class="meta">
              <span class="tag" class:highlight={isWinner}>
                {isWinner ? 'Winner' : achievement.data.type}
              </span>
              <span class="date">{achievement.data.date}</span>
              {achievement.data.participants && (
                <span class="participants">{achievement.data.participants} participants</span>
              )}
            </div>
            
            <h1>{achievement.data.title}</h1>
            <p class="event">{achievement.data.event}</p>
            <p class="description">{achievement.data.description}</p>
            
            {achievement.data.rank && (
              <div class="rank-badge">
                <span class="rank-label">Ranking</span>
                <span class="rank-value">{achievement.data.rank}</span>
              </div>
            )}
            
            <div class="actions">
              {achievement.data.url && (
                <a href={achievement.data.url} class="btn btn-primary" target="_blank" rel="noopener">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                    <polyline points="15 3 21 3 21 9"></polyline>
                    <line x1="10" y1="14" x2="21" y2="3"></line>
                  </svg>
                  View Event Page
                </a>
              )}
              {achievement.data.game && (
                <a href={`/games/${achievement.data.game}`} class="btn">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="2" y="6" width="20" height="12" rx="2"></rect>
                    <circle cx="8" cy="12" r="2"></circle>
                    <path d="M15 10v4M13 12h4"></path>
                  </svg>
                  View Game
                </a>
              )}
            </div>
          </div>
        </div>
        
        {achievement.data.image && (
          <div class="featured-image">
            <img src={achievement.data.image} alt={achievement.data.title} />
          </div>
        )}
      </header>
      
      {achievement.data.gallery && achievement.data.gallery.length > 0 && (
        <section class="gallery-section">
          <h2>Gallery</h2>
          <div class="gallery-grid">
            {achievement.data.gallery.map((img, index) => (
              <div class="gallery-item">
                <img src={img} alt={`${achievement.data.title} - Image ${index + 1}`} />
              </div>
            ))}
          </div>
        </section>
      )}
      
      <div class="achievement-content">
        <Content />
      </div>
    </div>
  </article>
</Layout>

<style>
  .achievement-detail {
    padding: 7rem 0 4rem;
    min-height: 100vh;
  }
  
  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .back-link {
    display: inline-flex;
    align-items: center;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--accent);
    text-decoration: none;
    margin-bottom: 2rem;
  }
  
  .back-link:hover { color: var(--accent-dim); }
  
  .achievement-header {
    margin-bottom: 3rem;
    padding-bottom: 2.5rem;
    border-bottom: 1px solid var(--border-subtle);
  }
  
  .header-content {
    display: flex;
    gap: 2rem;
    margin-bottom: 2rem;
  }
  
  .icon-wrapper {
    flex-shrink: 0;
    width: 72px;
    height: 72px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-elevated);
    border-radius: var(--radius-lg);
    color: var(--text-muted);
  }
  
  .icon-wrapper.winner {
    background: var(--accent-glow);
    color: var(--accent);
  }
  
  .header-info {
    flex: 1;
  }
  
  .meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
  }
  
  .tag {
    padding: 0.25rem 0.625rem;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: var(--bg-elevated);
    border-radius: 4px;
    color: var(--text-secondary);
  }
  
  .tag.highlight {
    background: var(--accent-glow);
    color: var(--accent);
  }
  
  .date {
    font-size: 0.8rem;
    color: var(--text-muted);
  }
  
  .participants {
    font-size: 0.8rem;
    color: var(--text-muted);
    padding-left: 0.75rem;
    border-left: 1px solid var(--border-light);
  }
  
  h1 {
    font-family: var(--font-display);
    font-size: 2.25rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }
  
  .event {
    font-size: 1.1rem;
    color: var(--accent);
    font-weight: 500;
    margin-bottom: 0.75rem;
  }
  
  .description {
    font-size: 1rem;
    color: var(--text-secondary);
    line-height: 1.65;
    margin-bottom: 1.25rem;
  }
  
  .rank-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.25rem;
    background: var(--bg-card);
    border: 1px solid var(--border-light);
    border-radius: var(--radius);
    margin-bottom: 1.5rem;
  }
  
  .rank-label {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
  }
  
  .rank-value {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--accent);
  }
  
  .actions {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    font-size: 0.85rem;
    font-weight: 500;
    border: 1px solid var(--border-light);
    border-radius: var(--radius);
    background: var(--bg-card);
    color: var(--text-primary);
    text-decoration: none;
    transition: all 0.2s ease;
  }
  
  .btn:hover {
    background: var(--bg-elevated);
    border-color: var(--accent);
  }
  
  .btn-primary {
    background: var(--accent);
    border-color: var(--accent);
    color: var(--bg-primary);
  }
  
  .btn-primary:hover {
    background: var(--accent-dim);
    border-color: var(--accent-dim);
  }
  
  .featured-image {
    border-radius: var(--radius-lg);
    overflow: hidden;
    aspect-ratio: 16 / 9;
    background: var(--bg-card);
  }
  
  .featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .gallery-section {
    margin-bottom: 3rem;
  }
  
  .gallery-section h2 {
    font-family: var(--font-display);
    font-size: 1.375rem;
    color: var(--text-primary);
    margin-bottom: 1.25rem;
  }
  
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }
  
  .gallery-item {
    border-radius: var(--radius);
    overflow: hidden;
    aspect-ratio: 16 / 10;
    background: var(--bg-card);
    cursor: pointer;
    transition: transform 0.3s ease;
  }
  
  .gallery-item:hover {
    transform: scale(1.02);
  }
  
  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .achievement-content {
    color: var(--text-secondary);
    line-height: 1.75;
  }
  
  .achievement-content :global(h2) {
    font-family: var(--font-display);
    font-size: 1.375rem;
    color: var(--text-primary);
    margin: 2rem 0 0.875rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border-subtle);
  }
  
  .achievement-content :global(h3) {
    font-family: var(--font-display);
    font-size: 1.125rem;
    color: var(--text-primary);
    margin: 1.5rem 0 0.625rem;
  }
  
  .achievement-content :global(p) { margin-bottom: 1rem; }
  
  .achievement-content :global(ul) {
    list-style: none;
    padding-left: 1.25rem;
    margin-bottom: 1.25rem;
  }
  
  .achievement-content :global(li) {
    position: relative;
    margin-bottom: 0.375rem;
  }
  
  .achievement-content :global(li::before) {
    content: '–';
    position: absolute;
    left: -1.25rem;
    color: var(--text-muted);
  }
  
  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      gap: 1.5rem;
    }
    
    .icon-wrapper {
      width: 56px;
      height: 56px;
    }
    
    h1 { font-size: 1.75rem; }
    
    .actions { flex-direction: column; }
    
    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
