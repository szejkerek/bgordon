---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const games = await getCollection('games');
  return games.map((game) => ({
    params: { slug: game.slug },
    props: { game },
  }));
}

const { game } = Astro.props;
const { Content } = await game.render();
---

<Layout title={`${game.data.title} — Bartłomiej Gordon`} description={game.data.description}>
  <article class="game-detail">
    <div class="container">
      <a href="/#projects" class="back-link">← Back to Projects</a>
      
      <header class="game-header">
        {game.data.image && (
          <div class="game-image">
            <img src={game.data.image} alt={game.data.title} />
          </div>
        )}
        
        <div class="game-info">
          <div class="game-meta">
            <span class="date">{game.data.date}</span>
            {game.data.jam && <span class="tag highlight">{game.data.jam}</span>}
            {game.data.teamSize && (
              <span class="team-badge">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                  <circle cx="9" cy="7" r="4"></circle>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
                <span>{game.data.teamSize} {game.data.teamSize === 1 ? 'person' : 'people'}</span>
              </span>
            )}
          </div>
          
          <h1>{game.data.title}</h1>
          <p class="description">{game.data.description}</p>
          
          <div class="tags">
            {game.data.tags?.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
          
          <div class="actions">
            {game.data.playUrl && (
              <a href={game.data.playUrl} class="btn btn-primary" target="_blank" rel="noopener noreferrer">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                  <polygon points="5 3 19 12 5 21 5 3"></polygon>
                </svg>
                Play Game
              </a>
            )}
            {game.data.sourceUrl && (
              <a href={game.data.sourceUrl} class="btn" target="_blank" rel="noopener noreferrer">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                  <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                </svg>
                Source Code
              </a>
            )}
          </div>
        </div>
      </header>
      
      {game.data.gallery && game.data.gallery.length > 0 && (
        <section class="gallery-section">
          <h2>Gallery</h2>
          <div class="gallery-grid">
            {game.data.gallery.map((img, index) => (
              <div class="gallery-item">
                <img src={img} alt={`${game.data.title} - Image ${index + 1}`} loading="lazy" decoding="async" />
              </div>
            ))}
          </div>
        </section>
      )}
      
      <div class="game-content">
        <Content />
      </div>
    </div>
  </article>
</Layout>

<style>
  .game-detail {
    padding: 7rem 0 4rem;
    min-height: 100vh;
  }
  
  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .back-link {
    display: inline-flex;
    align-items: center;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--accent);
    text-decoration: none;
    margin-bottom: 2rem;
  }
  
  .back-link:hover { color: var(--accent-dim); }
  
  .game-header {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2.5rem;
    margin-bottom: 3rem;
    padding-bottom: 2.5rem;
    border-bottom: 1px solid var(--border-subtle);
  }
  
  .game-image {
    border-radius: var(--radius-lg);
    overflow: hidden;
    aspect-ratio: 16 / 10;
    background: var(--bg-card);
  }
  
  .game-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .game-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .game-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
  }
  
  .date {
    font-size: 0.8rem;
    color: var(--text-muted);
  }
  
  .tag {
    padding: 0.25rem 0.625rem;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    background: var(--bg-elevated);
    border-radius: 4px;
    color: var(--text-secondary);
  }
  
  .tag.highlight {
    background: var(--accent-glow);
    color: var(--accent);
  }
  
  .team-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.25rem 0.625rem;
    font-size: 0.75rem;
    font-weight: 500;
    background: var(--bg-elevated);
    border-radius: 4px;
    color: var(--text-secondary);
  }
  
  .team-badge svg {
    opacity: 0.7;
  }
  
  h1 {
    font-family: var(--font-display);
    font-size: 2rem;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }
  
  .description {
    font-size: 1rem;
    color: var(--text-secondary);
    line-height: 1.65;
    margin-bottom: 1.25rem;
  }
  
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-bottom: 1.5rem;
  }
  
  .actions {
    display: flex;
    gap: 0.75rem;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    font-size: 0.85rem;
    font-weight: 500;
    border: 1px solid var(--border-light);
    border-radius: var(--radius);
    background: var(--bg-card);
    color: var(--text-primary);
    text-decoration: none;
    transition: all 0.2s ease;
  }
  
  .btn:hover {
    background: var(--bg-elevated);
    border-color: var(--accent);
  }
  
  .btn-primary {
    background: var(--accent);
    border-color: var(--accent);
    color: var(--bg-primary);
  }
  
  .btn-primary:hover {
    background: var(--accent-dim);
    border-color: var(--accent-dim);
  }
  
  .gallery-section {
    margin-bottom: 3rem;
  }
  
  .gallery-section h2 {
    font-family: var(--font-display);
    font-size: 1.375rem;
    color: var(--text-primary);
    margin-bottom: 1.25rem;
  }
  
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }
  
  .gallery-item {
    border-radius: var(--radius);
    overflow: hidden;
    aspect-ratio: 16 / 10;
    background: var(--bg-card);
    cursor: pointer;
    transition: transform 0.3s ease;
  }
  
  .gallery-item:hover {
    transform: scale(1.02);
  }
  
  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .game-content {
    color: var(--text-secondary);
    line-height: 1.75;
  }
  
  .game-content :global(h2) {
    font-family: var(--font-display);
    font-size: 1.375rem;
    color: var(--text-primary);
    margin: 2rem 0 0.875rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border-subtle);
  }
  
  .game-content :global(h3) {
    font-family: var(--font-display);
    font-size: 1.125rem;
    color: var(--text-primary);
    margin: 1.5rem 0 0.625rem;
  }
  
  .game-content :global(p) { margin-bottom: 1rem; }
  
  .game-content :global(ul) {
    list-style: none;
    padding-left: 1.25rem;
    margin-bottom: 1.25rem;
  }
  
  .game-content :global(li) {
    position: relative;
    margin-bottom: 0.375rem;
  }
  
  .game-content :global(li::before) {
    content: '–';
    position: absolute;
    left: -1.25rem;
    color: var(--text-muted);
  }
  
  @media (max-width: 768px) {
    .game-header {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    h1 { font-size: 1.625rem; }
    
    .actions { flex-direction: column; }
    
    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
