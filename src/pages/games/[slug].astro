---
import Layout from '../../layouts/Layout.astro';
import { getCollection, getEntry } from 'astro:content';

export async function getStaticPaths() {
  const games = await getCollection('games');
  return games.map((game) => ({
    params: { slug: game.slug },
    props: { game },
  }));
}

const { game } = Astro.props;
const { Content } = await game.render();
---

<Layout title={`${game.data.title} | Game Developer Portfolio`} description={game.data.description}>
  <article class="game-detail">
    <div class="container">
      <a href="/#games" class="back-link">← Back to Games</a>
      
      <header class="game-header">
        {game.data.image && (
          <div class="game-image">
            <img src={game.data.image} alt={game.data.title} />
          </div>
        )}
        
        <div class="game-info">
          <div class="game-meta">
            <span class="date">{game.data.date}</span>
            {game.data.jam && <span class="tag jam">{game.data.jam}</span>}
            {game.data.featured && <span class="tag featured">Featured</span>}
          </div>
          
          <h1>{game.data.title}</h1>
          <p class="description">{game.data.description}</p>
          
          <div class="tags">
            {game.data.tags?.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
          
          <div class="actions">
            {game.data.playUrl && (
              <a href={game.data.playUrl} class="btn" target="_blank" rel="noopener">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="5 3 19 12 5 21 5 3"></polygon>
                </svg>
                Play Game
              </a>
            )}
            {game.data.sourceUrl && (
              <a href={game.data.sourceUrl} class="btn btn-secondary" target="_blank" rel="noopener">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                </svg>
                View Source
              </a>
            )}
          </div>
        </div>
      </header>
      
      <div class="game-content">
        <Content />
      </div>
    </div>
  </article>
</Layout>

<style>
  .game-detail {
    padding: 8rem 0 4rem;
    min-height: 100vh;
  }
  
  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .back-link {
    display: inline-flex;
    align-items: center;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9rem;
    color: var(--accent-primary);
    text-decoration: none;
    margin-bottom: 2rem;
    transition: all 0.3s ease;
  }
  
  .back-link:hover {
    transform: translateX(-4px);
  }
  
  .game-header {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-bottom: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .game-image {
    border-radius: 16px;
    overflow: hidden;
    aspect-ratio: 16 / 10;
    background: var(--bg-card);
  }
  
  .game-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .game-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .game-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }
  
  .date {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
    color: var(--text-muted);
  }
  
  .tag {
    padding: 0.2rem 0.6rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: rgba(0, 255, 136, 0.1);
    border: 1px solid rgba(0, 255, 136, 0.3);
    border-radius: 4px;
    color: var(--accent-primary);
  }
  
  .tag.jam {
    background: rgba(255, 51, 102, 0.1);
    border-color: rgba(255, 51, 102, 0.3);
    color: var(--accent-secondary);
  }
  
  .tag.featured {
    background: rgba(255, 204, 0, 0.1);
    border-color: rgba(255, 204, 0, 0.3);
    color: var(--accent-yellow);
  }
  
  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }
  
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }
  
  .actions {
    display: flex;
    gap: 1rem;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 2px solid var(--accent-primary);
    border-radius: 8px;
    background: transparent;
    color: var(--accent-primary);
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .btn:hover {
    background: var(--accent-primary);
    color: var(--bg-primary);
    box-shadow: 0 0 30px rgba(0, 255, 136, 0.4);
  }
  
  .btn-secondary {
    border-color: var(--accent-tertiary);
    color: var(--accent-tertiary);
  }
  
  .btn-secondary:hover {
    background: var(--accent-tertiary);
    box-shadow: 0 0 30px rgba(0, 212, 255, 0.4);
  }
  
  /* Content styling */
  .game-content {
    color: var(--text-secondary);
    line-height: 1.8;
  }
  
  .game-content :global(h2) {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin: 2rem 0 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .game-content :global(h3) {
    font-size: 1.2rem;
    color: var(--text-primary);
    margin: 1.5rem 0 0.75rem;
  }
  
  .game-content :global(p) {
    margin-bottom: 1rem;
  }
  
  .game-content :global(ul) {
    list-style: none;
    padding-left: 1.5rem;
    margin-bottom: 1.5rem;
  }
  
  .game-content :global(li) {
    position: relative;
    margin-bottom: 0.5rem;
  }
  
  .game-content :global(li::before) {
    content: '▸';
    position: absolute;
    left: -1.5rem;
    color: var(--accent-primary);
  }
  
  .game-content :global(code) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9em;
    padding: 0.2rem 0.4rem;
    background: rgba(0, 255, 136, 0.1);
    border-radius: 4px;
    color: var(--accent-primary);
  }
  
  @media (max-width: 768px) {
    .game-header {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    h1 {
      font-size: 2rem;
    }
    
    .actions {
      flex-direction: column;
    }
  }
</style>
